<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dip"
    android:longClickable="true"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageViewAlarmRule"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"/>


    <LinearLayout
        android:id="@+id/fiyatLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewAlarmRule"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            style="@style/lv_text_header"
            android:text="@string/add_alarm_price" />
        <TextView
            android:id="@+id/textViewValue"
            style="@style/lv_text_value"
            android:text="TextView" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/farkLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fiyatLayout"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            style="@style/lv_text_header"
            android:text="@string/add_alarm_change" />
        <TextView
            android:id="@+id/textViewFark"
            style="@style/lv_text_value"
            android:text="TextView" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/btnDeleteAlarm"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/icon_alarm_delete48" />

</RelativeLayout>
