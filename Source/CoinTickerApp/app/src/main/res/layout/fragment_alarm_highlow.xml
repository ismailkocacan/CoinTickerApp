<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".FragmentAlarmHighLow">

    <CheckBox
        android:id="@+id/cBoxHighExceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#43A047"
        android:text="@string/notifyMeWhenExceedHighValue" />

    <CheckBox
        android:id="@+id/cBoxLowExceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#C71438"
        android:text="@string/notifyMeWhenExceedLowValue" />

</LinearLayout>