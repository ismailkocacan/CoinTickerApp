<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="#7C7A7A" />
            <gradient  android:angle="-90"  android:startColor="#FFD4D4D4" android:endColor="#FFD4D4D4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="#7C7A7A" />
            <solid  android:color="#DEDEDE"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#7C7A7A" />
            <gradient  android:angle="-90"  android:startColor="@android:color/darker_gray" android:endColor="@android:color/darker_gray" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#7C7A7A" />
            <gradient  android:angle="-90"  android:startColor="@android:color/darker_gray" android:endColor="@android:color/darker_gray" />
        </shape>
    </item>

</selector>