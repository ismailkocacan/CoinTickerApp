<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="2dip" android:color="#01695E" />
            <gradient  android:angle="-90"  android:startColor="#01695E" android:endColor="#01695E"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="3dip" android:color="#01695E" />
            <solid  android:color="#02966C"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="0dip" android:color="#055F48" />
            <gradient  android:angle="-90"  android:startColor="#16B68E" android:endColor="#0A9673" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="0dip" android:color="#055F48" />
            <gradient  android:angle="-90"  android:startColor="#16B68E" android:endColor="#0A9673" />
        </shape>
    </item>

</selector>