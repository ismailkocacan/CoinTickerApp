<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="0dip" android:color="#F0440A" />
            <gradient  android:angle="-90"  android:startColor="#F0440A" android:endColor="#F0440A"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="0dip" android:color="#F0440A" />
            <solid  android:color="#F0440A"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="0dip" android:color="#FC5A26" />
            <gradient  android:angle="-90"  android:startColor="#FC5A26" android:endColor="#E64717" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="0dip" android:color="#FC5A26" />
            <gradient  android:angle="-90"  android:startColor="#FC5A26" android:endColor="#E64717" />
        </shape>
    </item>

</selector>